---
import { Image } from "astro:assets";
import AppButton from "~/components/AppButton.astro";
import ExternalLink from "./ExternalLink.astro";
import site from "../config/site";
import avatar from "~/assets/avatar@2x.png";

const { author, twitterUsername } = site;

const heroCTA = "Start Here";
---

<section class="overflow-hidden py-12 md:py-20 lg:py-24">
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <svg
      class="absolute right-full top-full -translate-y-1/4 translate-x-1/3 transform lg:translate-x-1/2 xl:-translate-y-1/2"
      width="404"
      height="404"
      fill="none"
      viewBox="0 0 404 404"
      role="img"
      aria-labelledby="svg-workcation"
    >
      <defs>
        <pattern
          id="ad119f34-7694-4c31-947f-5c9d249b21f3"
          x="0"
          y="0"
          width="20"
          height="20"
          patternUnits="userSpaceOnUse"
        >
          <rect
            x="0"
            y="0"
            width="4"
            height="4"
            class="text-zinc-200 dark:text-zinc-800"
            fill="currentColor"></rect>
        </pattern>
      </defs>
      <rect
        width="404"
        height="404"
        fill="url(#ad119f34-7694-4c31-947f-5c9d249b21f3)"></rect>
    </svg>

    <div class="relative">
      <blockquote class="text-zinc-900 dark:text-zinc-50">
        <div class="mb-4 flex items-center justify-center">
          <Image
            src={avatar}
            alt={`${author}'s avatar`}
            height={avatar.height}
            width={avatar.width}
            class="mx-auto h-14 w-14 rounded-full md:h-20 md:w-20"
          />
        </div>
        <div
          class="mx-auto grid max-w-3xl place-items-center text-center text-lg font-medium leading-9 md:text-2xl xl:text-3xl"
        >
          <p>
            Hi, Iâ€™m
            <ExternalLink
              href={`https://twitter.com/${twitterUsername}`}
              className="text-brand-red filter hover:brightness-125 dark:text-brand-red-dark"
            >
              {author}<span class="text-zinc-900 dark:text-zinc-50">.</span>
            </ExternalLink> Welcome to my online home. I write on the
            intersection of technology and history. Want to learn more about me?
          </p>
          <a href="/essays" class="mt-4">
            <AppButton cta={heroCTA} />
          </a>
        </div>
      </blockquote>
    </div>
  </div>
</section>
