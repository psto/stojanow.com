---
import BaseLayout from "~/layouts/BaseLayout.astro";
import PostHeader from "~/components/PostHeader.astro";
import { Picture } from "@astrojs/image/components";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const fiction = await getCollection("fiction");

  return fiction.map((story) => ({
    params: { slug: story.slug },
    props: { story },
  }));
}

const { story } = Astro.props;
const { slug } = Astro.params;
const { Content } = await story.render();

const seoProps = {
  description: story.data.description,
  title: story.data.title,
  slug,
};
---

<BaseLayout {...seoProps}>
  <div class="relative px-4 pt-16 pb-20 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
    <div class="mx-auto">
      <article
        class="max-w-2xl px-4 pt-8 pb-16 mx-auto prose dark:prose-dark md:pt-0"
      >
        <PostHeader date={story.data.date} title={story.data.title} />

        <Picture
          src={import(`../../images/fiction/${story.data.image}.jpg`)}
          alt={story.data.imageAlt}
          widths={[300, 500, 700]}
          aspectRatio="4:3"
          sizes="(max-width: 700px) 100vw, 700px"
          formats={["avif", "webp"]}
          loading="eager"
          class="w-full rounded"
        />

        <Content class="prose dark:prose-dark" />
      </article>
    </div>
  </div>
</BaseLayout>
