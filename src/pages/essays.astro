---
import AppTitle from "~/components/AppTitle.astro";
import BaseLayout from "~/layouts/BaseLayout.astro";
import PostsIndex from "~/components/PostsIndex.astro";
import { getCollection } from "astro:content";

const essays = await getCollection("essays");
const sortedEssays = essays.sort(
  (essayA, essayB) =>
    new Date(essayB.data.date).valueOf() - new Date(essayA.data.date).valueOf()
);

const seoProps = {
  description: "Piotr Stojanow's essays",
  slug: "essays",
  title: "Essays",
};
---

<BaseLayout {...seoProps}>
  <div class="relative px-4 pt-16 pb-20 sm:px-6 lg:px-8 lg:pt-24 lg:pb-28">
    <div
      class="prose mx-auto max-w-2xl px-4 text-center dark:prose-dark md:pt-0 lg:prose-lg"
    >
      <AppTitle>{seoProps.title}</AppTitle>
      <hr />
    </div>

    <PostsIndex posts={sortedEssays} />
  </div>
</BaseLayout>
