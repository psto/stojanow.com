---
import { Image } from 'astro:assets'
import { CollectionEntry, getCollection } from "astro:content";
import PostHeader from "~/components/PostHeader.astro";
import BaseLayout from "~/layouts/BaseLayout.astro";
import { formatContent } from "~/utils";

export async function getStaticPaths() {
  const essays = await getCollection("essays");
  const formattedEssays = formatContent(essays);

  return formattedEssays.map((essay) => ({
    params: { slug: essay.slug },
    props: { essay },
  }));
}

type Props = { essay: CollectionEntry<"essays"> };
type Slug = Pick<CollectionEntry<"essays">, "slug">;

const { essay } = Astro.props;
const { slug } = Astro.params as Slug;
const { Content } = await essay.render();

const essayImage = essay.data.image;

const seoProps = {
  description: essay.data.description,
  title: essay.data.title,
  slug,
};
---

<BaseLayout {...seoProps}>
  <div class="relative px-4 pt-16 pb-20 sm:px-6 lg:px-8 lg:pt-24 lg:pb-28">
    <div class="mx-auto">
      <article
        class="prose mx-auto max-w-2xl px-4 pt-8 pb-16 dark:prose-dark md:pt-0"
      >
        <PostHeader
          date={essay.data.date.toString()}
          title={essay.data.title}
        />

        {
          /* TODO: research sizes viewport - vw or ship with aspectRatio="4:3" instead */
        }
        {
          essayImage && (
            <Image
              src={essayImage}
              alt={essayImage || ""}
              format="avif"
              class="w-full rounded"
              loading="eager"
            />
          )
        }

        <Content class="prose dark:prose-dark" />
      </article>
    </div>
  </div>
</BaseLayout>
